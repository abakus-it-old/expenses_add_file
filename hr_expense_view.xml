<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<!-- Add a tab with attachements -->
		<record model="ir.ui.view" id="hr_expense_attachements_form_view">
            <field name="name">hr.expense.attachements</field>
            <field name="model">hr.expense.expense</field>
            <field name="inherit_id" ref="hr_expense.view_expenses_form"/>
            <field name="arch" type="xml">
				<notebook>
					<page string="Attachements">
							<field name="attachments_ids" widget="many2many_binary" string="Attach a file"/>
					</page>
				</notebook>
            </field>
        </record>
	</data>
</openerp>
